{
  "name": "Java SDK",
  "envVars": {
    "OPERATION_ID_PROPERTY":"x-inin-method-name"
  },
  "settings": {
    "sdkRepo": {
      "repo": "https://github.com/MyPureCloud/sdk_test",
      "branch": "master"
    },
    "versionFile": "${SDK_REPO}/version.json",
    "logLevel": "debug",
    "extensionsDestination": "${SDK_REPO}/build/src/main/java/com/mypurecloud/sdk",
    "swagger": {
      "oldSwaggerPath": "${SDK_REPO}/swagger.json",
      "newSwaggerPath": "https://api.mypurecloud.com/api/v2/docs/swagger",
      "saveNewSwaggerPath": "${SDK_REPO}/swagger.json"
    },
    "swaggerCodegen": {
      "language": "purecloudjava",
      "jarPath": "${WORKSPACE}/swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar",
      "configFile": "${SDK_TEMP}/config.json",
      "extraGeneratorOptions": []
    },
    "releaseNoteTemplatePath": "${COMMON_ROOT}/resources/templates/githubSdkReleaseNotes.md",
    "debugConfig": false
  },
  "stageSettings": {
    "prebuild": {
      "preRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"prebuild-prerun"
          ],
          "failOnError": true
        }
      ],
      "postRunScripts": [
        {
          "type": "node",
          "path": "prebuild-postrun.js",
          "args": [
          	{ "$ref": "#/settings/swaggerCodegen/configFile" },
          	{ "$ref": "#/settings/versionFile" },
          	"platform-client"
          ],
          "failOnError": true
        }
      ]
    },
    "build": {
      "preRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"build-prerun"
          ],
          "failOnError": true
        }
      ],
      "compileScripts": [
        {
          "type": "shell",
          "path": "compile.sh",
          "args": [
          	"verify",
          	"${SDK_REPO}/build",
          	"${WORKSPACE}/settings.xml",
          	"${DPGP_PASSPHRASE}"
          ]
        }
      ],
      "postRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"build-postrun"
          ],
          "failOnError": true
        }
      ]
    },
    "postbuild": {
    	"publishRelease": true,
      "preRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"postbuild-prerun"
          ],
          "failOnError": true
        }
      ],
      "postRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"postbuild-postrun"
          ],
          "failOnError": true
        }
      ]
    }
  }
}