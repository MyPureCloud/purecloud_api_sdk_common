{
  "name": "Java SDK",
  "envVars": {
    "key":"value"
  },
  "settings": {
    "sdkRepo": {
      "repo": "https://github.com/MyPureCloud/purecloud_api_sdk_java.git",
      "branch": "sdkv1"
    },
    "versionFile": "${SDK_REPO}/version.json",
    "logLevel": "debug",
    "extensionsDestination": "${SDK_REPO}/build/src/main/java/com/mypurecloud/sdk",
    "swagger": {
      "oldSwaggerPath": "${SDK_REPO}/swagger.json",
      "newSwaggerPath": "https://api.mypurecloud.com/api/v2/docs/swagger",
      "saveNewSwaggerPath": "${SDK_REPO}/swagger.json"
    },
    "swaggerCodegen": {
      "language": "purecloudjava",
      "jarPath": "/git/swagger-codegen/modules/swagger-codegen-cli/target/swagger-codegen-cli.jar",
      "configFile": "${SDK_TEMP}/config.json",
      "extraGeneratorOptions": []
    },
    "debugConfig": false
  },
  "stageSettings": {
    "prebuild": {
      "preRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"prebuild-prerun"
          ],
          "failOnError": true
        }
      ],
      "postRunScripts": [
        {
          "type": "node",
          "path": "prebuild-postrun.js",
          "args": [
          	{ "$ref": "#/settings/swaggerCodegen/configFile" },
          	{ "$ref": "#/settings/versionFile" },
          	"platform-client"
          ],
          "failOnError": true
        }
      ]
    },
    "build": {
      "preRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"build-prerun"
          ],
          "failOnError": true
        }
      ],
      "compileScripts": [
        {
          "type": "shell",
          "path": "compile.sh",
          "args": []
        }
      ],
      "postRunScripts": [
        {
          "type": "node",
          "path": "test.js",
          "args": [
          	"build-postrun"
          ],
          "failOnError": true
        }
      ]
    },
    "postbuild": {}
  }
}